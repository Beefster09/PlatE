{
    "title": "PlatE Test Game",
    "icon": "testicon.png",
    "screen": {
        "width": 800,
        "height": 480
    },
    "main_script": "main.as",
    "asset_dir": "assets",
    "script_dir": "scripts",
    "controller_types": [
        {
            "name": "Menu",
            "axes": [],
            "buttons": ["Up", "Down", "Left", "Right", "OK", "Cancel"]
        },
        {
            "name": "Player",
            "axes": ["x", "y"],
            "buttons": ["Jump", "Attack"]
        }
    ],
    "controllers": [
        {
            "name": "Menu1",
            "type": "Menu",
            "defaults": {
                "Up": ["up", "W"],
                "Down": ["down", "S"],
                "Left": ["left", "A"],
                "Right": ["right", "D"],
                "OK": ["return", "space"],
                "Cancel": "escape"
            }
        },
        {
            "name": "Player1",
            "type": "Player",
            "defaults": {
                "x+": ["right", "D"],
                "x-": ["left", "A"],
                "y+": ["down", "S"],
                "y-": ["up", "W"],
                "Jump": "space",
                "Attack": "LMB"
            }
        }
    ],
    "collision": {
        "types": [
            {
                "name": "Hurtbox",
                "color": "#cda720"
            },
            {
                "name": "Damage",
                "color": "#ff0000",
                "acts_on": ["Hurtbox"]
            }
        ],
        "channels": [
            "front_layer",
            "back_layer",
            "team1",
            "team2"
        ]
    }
}
